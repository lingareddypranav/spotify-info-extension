{
    "manifest_version": 2,
    "name" : "Spotify-Info-Extension",
    "version": "1.0",
    "description" : "Shows information about the currently playing Spotify Song",
    "permissions" : [
        "identity",
        
    ],
    "browser_action" : {
        "default_popup" : "popup.html"
    },
    "background" : {
        "scripts": ["background.js"],
        "persistent" : false
    }
}