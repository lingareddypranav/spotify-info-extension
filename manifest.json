{
    "manifest_version": 3,
    "name": "Spotify Song Info",
    "description": "Displays the currently playing Spotify song and provides a summary via OpenAI.",
    "version": "2.0",
    "action": {
      "default_popup": "popup.html",
      "default_popup_width": 450,
      "default_popup_height": 600,
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "permissions": [
      "identity",
      "activeTab",
      "storage"
    ],
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }